   <div id="i74" class="math">
    <span class="mi">M</span>
    <div class="mrow">
     <span class="mo">(</span>
     <div class="mrow">
      <span class="mi">z</span>
     </div>
     <span class="mo">)</span>
    </div>
    <span class="mo">=</span>
    <div class="msub">
     <div class="mrow">
      <span class="mi">M</span>
     </div>
     <div class="mrow">
      <div mathvariant="italic" class="mstyle">
       <span class="mi">m</span>
       <span class="mi">a</span>
       <span class="mi">x</span>
      </div>
     </div>
    </div>
    <span class="mo">−</span>
    <div class="msub">
     <div class="mrow">
      <span class="mi">M</span>
     </div>
     <div class="mrow">
      <div mathvariant="italic" class="mstyle">
       <span class="mi">m</span>
       <span class="mi">a</span>
       <span class="mi">x</span>
      </div>
     </div>
    </div>
    <div class="mrow">
     <span class="mo">(</span>
     <div class="mrow">
      <div class="msub">
       <div class="mrow">
        <span class="mi">z</span>
       </div>
       <div class="mrow">
        <div mathvariant="italic" class="mstyle">
         <span class="mi">m</span>
