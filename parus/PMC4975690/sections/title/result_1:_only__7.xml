            <span class="mi">m</span>
            <span class="mi">m</span>
           </div>
          </div>
          <span class="mo">−</span>
          <div class="msup">
           <div accent="true" class="mover">
            <span class="mi">m</span>
            <span class="mo">¯</span>
           </div>
           <span class="mn">2</span>
          </div>
         </div>
        </div>
       </div>
      </div>
      <div class="mtd"/>
      <div columnalign="left" class="mtd">
       <div separators="" open="[" close="" class="mfenced">
        <div class="mfrac">
         <div class="mrow">
          <span class="mn">2</span>
          <span class="mo">+</span>
          <div accent="true" class="mover">
           <span class="mi">m</span>
           <span class="mo">¯</span>
          </div>
         </div>
         <div class="mrow">
          <span class="mn">2</span>
          <span class="mo">−</span>
          <div accent="true" class="mover">
           <span class="mi">m</span>
           <span class="mo">¯</span>
          </div>
         </div>
        </div>
        <div separators="" open="(" close=")" class="mfenced">
         <div class="msub">
          <span class="mi">G</span>
          <div class="mrow">
           <span class="mi">a</span>
           <span class="mi">a</span>
          </div>
         </div>
         <span class="mo">+</span>
         <div class="msub">
          <span class="mi">G</span>
          <div class="mrow">
           <span class="mi">b</span>
           <span class="mi">b</span>
          </div>
         </div>
         <div class="msup">
          <span class="mi">ɛ</span>
          <span class="mn">2</span>
         </div>
         <span class="mo">+</span>
         <div class="msub">
          <span class="mi">G</span>
          <div class="mrow">
           <span class="mi">m</span>
