       <mrow class="mrow">
        <mi class="mi">n</mi>
       </mrow>
      </msub>
      <mo class="mo">∣</mo>
      <mi mathvariant="bold" class="mi">Y </mi>
     </mrow>
    </mfenced>
    <mo class="mo">.</mo>
