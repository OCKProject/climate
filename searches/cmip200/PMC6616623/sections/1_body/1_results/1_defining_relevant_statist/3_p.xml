       </mrow>
       <mrow class="mrow">
        <mn class="mn">1</mn>
       </mrow>
      </msub>
      <mo class="mo">∩</mo>
      <msub class="msub">
       <mrow class="mrow">
        <mi class="mi">H</mi>
       </mrow>
       <mrow class="mrow">
        <mn class="mn">2</mn>
       </mrow>
      </msub>
      <mo class="mo">∩</mo>
      <mo class="mo">⋯</mo>
      <mo class="mo">∩</mo>
      <msub class="msub">
       <mrow class="mrow">
        <mi class="mi">H</mi>
       </mrow>
       <mrow class="mrow">
        <mi class="mi">n</mi>
       </mrow>
      </msub>
      <mo class="mo">∣</mo>
      <mi mathvariant="bold" class="mi">Y </mi>
     </mrow>
    </mfenced>
    <mspace width="0.25em" class="mspace"/>
    <mo class="mo">=</mo>
    <mi class="mi">P</mi>
    <mfenced close=")" open="(" separators="" class="mfenced">
     <mrow class="mrow">
      <msub class="msub">
       <mrow class="mrow">
        <mi class="mi">H</mi>
       </mrow>
       <mrow class="mrow">
        <mn class="mn">1</mn>
       </mrow>
      </msub>
      <mo class="mo">∣</mo>
      <msub class="msub">
       <mrow class="mrow">
        <mi class="mi">H</mi>
       </mrow>
       <mrow class="mrow">
        <mn class="mn">2</mn>
       </mrow>
      </msub>
      <mo class="mo">∩</mo>
      <mo class="mo">⋯</mo>
      <mo class="mo">∩</mo>
      <msub class="msub">
       <mrow class="mrow">
        <mi class="mi">H</mi>
       </mrow>
       <mrow class="mrow">
        <mi class="mi">n</mi>
       </mrow>
      </msub>
      <mo class="mo">∩</mo>
      <mi mathvariant="bold" class="mi">Y </mi>
     </mrow>
    </mfenced>
    <mi class="mi">P</mi>
    <mfenced close=")" open="(" separators="" class="mfenced">
     <mrow class="mrow">
      <msub class="msub">
       <mrow class="mrow">
        <mi class="mi">H</mi>
       </mrow>
       <mrow class="mrow">
        <mn class="mn">2</mn>
       </mrow>
      </msub>
      <mo class="mo">∣</mo>
      <msub class="msub">
       <mrow class="mrow">
        <mi class="mi">H</mi>
       </mrow>
       <mrow class="mrow">
        <mn class="mn">3</mn>
       </mrow>
      </msub>
      <mo class="mo">∩</mo>
      <mo class="mo">⋯</mo>
      <mo class="mo">∩</mo>
      <msub class="msub">
       <mrow class="mrow">
        <mi class="mi">H</mi>
       </mrow>
       <mrow class="mrow">
        <mi class="mi">n</mi>
       </mrow>
      </msub>
      <mo class="mo">∩</mo>
      <mi mathvariant="bold" class="mi">Y </mi>
     </mrow>
    </mfenced>
    <mo class="mo">⋯</mo>
    <mi class="mi">P</mi>
    <mfenced close=")" open="(" separators="" class="mfenced">
     <mrow class="mrow">
      <msub class="msub">
       <mrow class="mrow">
        <mi class="mi">H</mi>
       </mrow>
       <mrow class="mrow">
        <mi class="mi">n</mi>
        <mo class="mo">−</mo>
        <mn class="mn">1</mn>
       </mrow>
      </msub>
      <mo class="mo">∣</mo>
      <msub class="msub">
       <mrow class="mrow">
        <mi class="mi">H</mi>
       </mrow>
       <mrow class="mrow">
        <mi class="mi">n</mi>
       </mrow>
      </msub>
      <mo class="mo">∩</mo>
      <mi mathvariant="bold" class="mi">Y </mi>
     </mrow>
    </mfenced>
    <mi class="mi">P</mi>
    <mfenced close=")" open="(" separators="" class="mfenced">
     <mrow class="mrow">
      <msub class="msub">
       <mrow class="mrow">
