   <math id="M1" class="math">
    <mi class="mi">p</mi>
    <mo class="mo">(</mo>
    <msub class="msub">
     <mrow class="mrow">
      <mi class="mi">M</mi>
     </mrow>
     <mrow class="mrow">
      <mi class="mi">i</mi>
     </mrow>
    </msub>
    <mo class="mo">|</mo>
    <mi mathvariant="bold-italic" class="mi">y</mi>
    <mo class="mo">)</mo>
    <mo class="mo">∝</mo>
    <mi class="mi">p</mi>
    <mo class="mo">(</mo>
    <mi mathvariant="bold-italic" class="mi">y</mi>
    <mo class="mo">|</mo>
    <msub class="msub">
     <mrow class="mrow">
      <mi class="mi">M</mi>
     </mrow>
     <mrow class="mrow">
      <mi class="mi">i</mi>
     </mrow>
    </msub>
    <mo class="mo">)</mo>
    <mi class="mi">p</mi>
    <mo class="mo">(</mo>
    <msub class="msub">
     <mrow class="mrow">
      <mi class="mi">M</mi>
     </mrow>
     <mrow class="mrow">
      <mi class="mi">i</mi>
     </mrow>
    </msub>
    <mo class="mo">)</mo>
   </math>
  </alternatives>
  <label class="label">(1)</label>
 </disp-formula>
</p>
