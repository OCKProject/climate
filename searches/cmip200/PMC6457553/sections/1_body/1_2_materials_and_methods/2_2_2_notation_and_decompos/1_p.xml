   <graphic xlink:href="pone.0214535.e002.jpg" id="pone.0214535.e002g" mimetype="image" position="anchor" orientation="portrait" class="graphic" xmlns:xlink="http://www.w3.org/1999/xlink"/>
   <math id="M2" class="math">
    <msubsup class="msubsup">
     <mrow class="mrow">
      <mi mathvariant="bold-italic" class="mi">x</mi>
     </mrow>
     <mrow class="mrow">
