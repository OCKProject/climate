    </mrow>
    <mrow class="mrow">
     <mi class="mi">i</mi>
    </mrow>
    <mrow class="mrow">
     <mi class="mi">t</mi>
     <mo class="mo">,</mo>
     <mi class="mi">m</mi>
    </mrow>
   </msubsup>
   <mo class="mo">=</mo>
   <msub class="msub">
