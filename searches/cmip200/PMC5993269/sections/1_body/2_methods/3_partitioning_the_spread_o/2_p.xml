   </msub>
   <mo class="mo">+</mo>
   <msub class="msub">
    <mi class="mi">SS</mi>
    <mi class="mi">i</mi>
   </msub>
   <mo class="mo">+</mo>
   <msub class="msub">
    <mi class="mi">SS</mi>
    <mi class="mi">s</mi>
   </msub>
   <mo class="mo">=</mo>
   <munderover class="munderover">
