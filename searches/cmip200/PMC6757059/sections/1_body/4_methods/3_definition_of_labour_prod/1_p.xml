         </mrow>
        </msub>
        <mo stretchy="false" class="mo">(</mo>
        <mi mathvariant="normal" class="mi">medium</mi>
        <mo stretchy="false" class="mo">)</mo>
        <mo class="mo">−</mo>
        <msub class="msub">
         <mrow class="mrow">
          <mi class="mi">N</mi>
         </mrow>
         <mrow class="mrow">
          <mi class="mi">g</mi>
