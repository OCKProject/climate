      <mi class="mi">ϕ</mi>
     </mrow>
    </mfenced>
    <mo class="mo">=</mo>
    <mfrac class="mfrac">
     <mrow class="mrow">
      <mn class="mn">1</mn>
     </mrow>
     <mrow class="mrow">
      <msub class="msub">
       <mrow class="mrow">
        <mi class="mi">N</mi>
       </mrow>
       <mrow class="mrow">
        <mi mathvariant="normal" class="mi">p</mi>
       </mrow>
      </msub>
     </mrow>
    </mfrac>
    <munderover accent="false" accentunder="false" class="munderover">
     <mrow class="mrow">
      <mo class="mo"> ∑</mo>
     </mrow>
     <mrow class="mrow">
      <mi class="mi">p</mi>
