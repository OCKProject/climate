      <mover accent="true" class="mover">
       <mrow class="mrow">
        <mi class="mi">ζ</mi>
       </mrow>
       <mo class="mo">~</mo>
      </mover>
     </mrow>
     <mrow class="mrow">
      <mn class="mn">0</mn>
      <mo class="mo">,</mo>
