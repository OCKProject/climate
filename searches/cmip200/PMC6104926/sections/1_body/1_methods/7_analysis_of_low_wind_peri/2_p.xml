          </mrow>
          <mo class="mo">]</mo>
         </mrow>
         <mrow class="mrow">
          <mi class="mi">n</mi>
          <mrow class="mrow">
           <mo class="mo">[</mo>
           <mrow class="mrow">
            <mi class="mi">R</mi>
            <mo class="mo">&lt;</mo>
            <mrow class="mrow">
             <mo class="mo">⟨</mo>
