     <mtr class="mtr">
      <mtd columnalign="right" class="mtd">
       <mrow class="mrow">
        <mtext class="mtext">SEN</mtext>
        <mo class="mo">=</mo>
        <mfrac class="mfrac">
         <mrow class="mrow">
          <mi class="mi">n</mi>
          <mo class="mo">[</mo>
          <mrow class="mrow">
           <mi class="mi">R</mi>
           <mo class="mo">&lt;</mo>
