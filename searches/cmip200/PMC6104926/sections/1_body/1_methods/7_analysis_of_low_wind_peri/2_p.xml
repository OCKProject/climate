             <mo class="mo">⟩</mo>
            </mrow>
            <mspace width="0.166667em" class="mspace"/>
            <mo class="mo">&amp;</mo>
            <mspace width="0.166667em" class="mspace"/>
            <mi class="mi">f</mi>
            <mo class="mo">≤</mo>
