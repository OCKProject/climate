      <mi class="mi">R</mi>
     </mrow>
     <mrow class="mrow">
      <mn class="mn">2</mn>
     </mrow>
    </msup>
    <mo class="mo">=</mo>
    <mn class="mn">1</mn>
    <mo class="mo">-</mo>
    <mfrac class="mfrac">
     <mrow class="mrow">
      <msup class="msup">
       <mrow class="mrow">
        <mover accent="false" class="mover">
         <mrow class="mrow">
          <msup class="msup">
           <mrow class="mrow">
            <mfenced close=")" open="(" separators="" class="mfenced">
             <mrow class="mrow">
              <msup class="msup">
               <mrow class="mrow">
                <mover accent="false" class="mover">
                 <mrow class="mrow">
                  <msub class="msub">
                   <mrow class="mrow">
                    <mi class="mi">x</mi>
                   </mrow>
                   <mrow class="mrow">
                    <mi class="mi">i</mi>
                   </mrow>
                  </msub>
                  <msub class="msub">
                   <mrow class="mrow">
                    <mi class="mi">p</mi>
                   </mrow>
                   <mrow class="mrow">
                    <mi class="mi">i</mi>
                   </mrow>
                  </msub>
                  <mrow class="mrow">
                   <mo class="mo">(</mo>
                   <mrow class="mrow">
                    <mi class="mi">t</mi>
                   </mrow>
                   <mo class="mo">)</mo>
                  </mrow>
                 </mrow>
                 <mo accent="true" class="mo">¯</mo>
                </mover>
               </mrow>
               <mrow class="mrow">
                <mi class="mi">i</mi>
               </mrow>
              </msup>
              <mo class="mo">-</mo>
              <mi class="mi">o</mi>
              <mrow class="mrow">
               <mo class="mo">(</mo>
               <mrow class="mrow">
                <mi class="mi">t</mi>
               </mrow>
               <mo class="mo">)</mo>
              </mrow>
             </mrow>
            </mfenced>
           </mrow>
           <mrow class="mrow">
            <mn class="mn">2</mn>
           </mrow>
          </msup>
         </mrow>
         <mo accent="true" class="mo">¯</mo>
        </mover>
       </mrow>
       <mrow class="mrow">
        <mi class="mi">t</mi>
       </mrow>
      </msup>
     </mrow>
     <mrow class="mrow">
      <msup class="msup">
       <mrow class="mrow">
        <mover accent="false" class="mover">
         <mrow class="mrow">
          <mi class="mi">o</mi>
          <msup class="msup">
           <mrow class="mrow">
            <mrow class="mrow">
             <mo class="mo">(</mo>
             <mrow class="mrow">
              <mi class="mi">t</mi>
             </mrow>
             <mo class="mo">)</mo>
            </mrow>
           </mrow>
           <mrow class="mrow">
            <mn class="mn">2</mn>
           </mrow>
          </msup>
         </mrow>
         <mo accent="true" class="mo">¯</mo>
        </mover>
       </mrow>
       <mrow class="mrow">
        <mi class="mi">t</mi>
       </mrow>
      </msup>
     </mrow>
    </mfrac>
    <mo class="mo">,</mo>
   </math>
   <graphic xlink:href="41467_2018_5442_Article_Equ1.gif" position="anchor" class="graphic" xmlns:xlink="http://www.w3.org/1999/xlink"/>
  </alternatives>
 </disp-formula>
 <disp-formula id="Equ2" class="disp-formula">
  <label class="label">2</label>
  <alternatives class="alternatives">
   <tex-math id="M3" class="tex-math">\documentclass[12pt]{minimal} \usepackage{amsmath} \usepackage{wasysym} \usepackage{amsfonts} \usepackage{amssymb} \usepackage{amsbsy} \usepackage{mathrsfs} \usepackage{upgreek} \setlength{\oddsidemargin}{-69pt} \begin{document}$${\mathrm{Reliability}} = \sqrt {\overline {\left\{ {\frac{{\left( {\overline {x_ip_i(t)} ^i - o(t)} \right)^2}}{{\overline {\left[ {x_i - \overline {x_ip_i(t)} ^i} \right]^2p_i(t)} ^i}}} \right\}} ^t} ,$$\end{document}</tex-math>
   <math id="M4" display="block" class="math">
    <mi mathvariant="normal" class="mi">Reliability</mi>
    <mo class="mo">=</mo>
    <msqrt class="msqrt">
     <msup class="msup">
      <mrow class="mrow">
       <mover accent="false" class="mover">
        <mrow class="mrow">
         <mfenced close="}" open="{" separators="" class="mfenced">
          <mrow class="mrow">
           <mfrac class="mfrac">
            <mrow class="mrow">
             <msup class="msup">
              <mrow class="mrow">
               <mfenced close=")" open="(" separators="" class="mfenced">
                <mrow class="mrow">
                 <msup class="msup">
                  <mrow class="mrow">
                   <mover accent="false" class="mover">
                    <mrow class="mrow">
                     <msub class="msub">
                      <mrow class="mrow">
                       <mi class="mi">x</mi>
                      </mrow>
                      <mrow class="mrow">
                       <mi class="mi">i</mi>
                      </mrow>
                     </msub>
                     <msub class="msub">
                      <mrow class="mrow">
                       <mi class="mi">p</mi>
                      </mrow>
                      <mrow class="mrow">
                       <mi class="mi">i</mi>
                      </mrow>
                     </msub>
                     <mrow class="mrow">
                      <mo class="mo">(</mo>
                      <mrow class="mrow">
                       <mi class="mi">t</mi>
                      </mrow>
                      <mo class="mo">)</mo>
                     </mrow>
                    </mrow>
                    <mo accent="true" class="mo">¯</mo>
                   </mover>
                  </mrow>
                  <mrow class="mrow">
                   <mi class="mi">i</mi>
                  </mrow>
                 </msup>
                 <mo class="mo">-</mo>
                 <mi class="mi">o</mi>
                 <mrow class="mrow">
                  <mo class="mo">(</mo>
                  <mrow class="mrow">
                   <mi class="mi">t</mi>
                  </mrow>
                  <mo class="mo">)</mo>
                 </mrow>
                </mrow>
               </mfenced>
              </mrow>
              <mrow class="mrow">
               <mn class="mn">2</mn>
              </mrow>
             </msup>
            </mrow>
            <mrow class="mrow">
             <msup class="msup">
              <mrow class="mrow">
               <mover accent="false" class="mover">
                <mrow class="mrow">
                 <msup class="msup">
                  <mrow class="mrow">
                   <mfenced close="]" open="[" separators="" class="mfenced">
                    <mrow class="mrow">
                     <msub class="msub">
                      <mrow class="mrow">
                       <mi class="mi">x</mi>
                      </mrow>
                      <mrow class="mrow">
                       <mi class="mi">i</mi>
                      </mrow>
                     </msub>
                     <mo class="mo">-</mo>
                     <msup class="msup">
                      <mrow class="mrow">
                       <mover accent="false" class="mover">
                        <mrow class="mrow">
                         <msub class="msub">
                          <mrow class="mrow">
                           <mi class="mi">x</mi>
                          </mrow>
                          <mrow class="mrow">
                           <mi class="mi">i</mi>
                          </mrow>
                         </msub>
                         <msub class="msub">
                          <mrow class="mrow">
                           <mi class="mi">p</mi>
                          </mrow>
                          <mrow class="mrow">
                           <mi class="mi">i</mi>
                          </mrow>
                         </msub>
                         <mrow class="mrow">
                          <mo class="mo">(</mo>
                          <mrow class="mrow">
                           <mi class="mi">t</mi>
                          </mrow>
                          <mo class="mo">)</mo>
                         </mrow>
                        </mrow>
                        <mo accent="true" class="mo">¯</mo>
                       </mover>
                      </mrow>
                      <mrow class="mrow">
                       <mi class="mi">i</mi>
                      </mrow>
                     </msup>
                    </mrow>
                   </mfenced>
                  </mrow>
                  <mrow class="mrow">
                   <mn class="mn">2</mn>
                  </mrow>
                 </msup>
                 <msub class="msub">
                  <mrow class="mrow">
                   <mi class="mi">p</mi>
                  </mrow>
                  <mrow class="mrow">
                   <mi class="mi">i</mi>
                  </mrow>
                 </msub>
                 <mrow class="mrow">
                  <mo class="mo">(</mo>
                  <mrow class="mrow">
                   <mi class="mi">t</mi>
                  </mrow>
                  <mo class="mo">)</mo>
                 </mrow>
                </mrow>
                <mo accent="true" class="mo">¯</mo>
               </mover>
              </mrow>
              <mrow class="mrow">
               <mi class="mi">i</mi>
              </mrow>
             </msup>
            </mrow>
           </mfrac>
