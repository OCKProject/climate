  <alternatives class="alternatives">
   <tex-math id="M7" class="tex-math">\documentclass[12pt]{minimal} \usepackage{amsmath} \usepackage{wasysym} \usepackage{amsfonts} \usepackage{amssymb} \usepackage{amsbsy} \usepackage{mathrsfs} \usepackage{upgreek} \setlength{\oddsidemargin}{-69pt} \begin{document}$${\boldsymbol{F}}({x}_{1},\ldots ,{x}_{d})={\boldsymbol{C}}({F}_{1}({x}_{1}),\ldots ,{F}_{d}({x}_{d}))$$\end{document}</tex-math>
   <math id="M8" display="block" class="math">
