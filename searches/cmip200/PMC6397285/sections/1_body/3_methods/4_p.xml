    </msub>
    <mo class="mo">−</mo>
    <mi mathvariant="normal" class="mi">Δ</mi>
    <msub class="msub">
     <mrow class="mrow">
      <mi class="mi">A</mi>
     </mrow>
     <mrow class="mrow">
      <mi class="mi">s</mi>
      <mi class="mi">n</mi>
     </mrow>
    </msub>
    <mo class="mo">−</mo>
    <mi mathvariant="normal" class="mi">Δ</mi>
    <msub class="msub">
     <mrow class="mrow">
      <mi class="mi">A</mi>
     </mrow>
     <mrow class="mrow">
      <mi class="mi">v</mi>
      <mi class="mi">e</mi>
      <mi class="mi">g</mi>
     </mrow>
    </msub>
    <mo class="mo">,</mo>
   </math>
   <graphic xlink:href="41598_2019_39942_Article_Equ2.gif" position="anchor" class="graphic" xmlns:xlink="http://www.w3.org/1999/xlink"/>
  </alternatives>
 </disp-formula>where 
 <inline-formula id="IEq1" class="inline-formula">
  <alternatives class="alternatives">
   <tex-math id="M5" class="tex-math">\documentclass[12pt]{minimal} \usepackage{amsmath} \usepackage{wasysym} \usepackage{amsfonts} \usepackage{amssymb} \usepackage{amsbsy} \usepackage{mathrsfs} \usepackage{upgreek} \setlength{\oddsidemargin}{-69pt} \begin{document}$${\bar{T}}_{a}$$\end{document}</tex-math>
   <math id="M6" class="math">
    <msub class="msub">
     <mrow class="mrow">
      <mover accent="true" class="mover">
