   <tex-math id="M9" class="tex-math">\documentclass[12pt]{minimal} \usepackage{amsmath} \usepackage{wasysym} \usepackage{amsfonts} \usepackage{amssymb} \usepackage{amsbsy} \usepackage{mathrsfs} \usepackage{upgreek} \setlength{\oddsidemargin}{-69pt} \begin{document}$${\rm{\Delta }}{T}_{veg}$$\end{document}</tex-math>
   <math id="M10" class="math">
    <mi mathvariant="normal" class="mi">Δ</mi>
    <msub class="msub">
     <mrow class="mrow">
      <mi class="mi">T</mi>
