  <thead class="thead">
   <tr class="tr">
    <td rowspan="1" colspan="1" class="td">Variable</td>
    <td align="center" rowspan="1" colspan="1" class="td">Resolution</td>
    <td align="center" rowspan="1" colspan="1" class="td">Reference</td>
    <td align="center" rowspan="1" colspan="1" class="td">Rationale</td>
   </tr>
