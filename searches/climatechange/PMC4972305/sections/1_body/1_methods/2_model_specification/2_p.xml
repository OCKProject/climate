           <mi class="mi">a</mi>
           <mi class="mi">t</mi>
           <mi class="mi">i</mi>
           <mi class="mi">o</mi>
           <mi class="mi">n</mi>
          </mrow>
         </msubsup>
         <mo class="mo">+</mo>
         <msubsup class="msubsup">
