            <div class="msub">
             <div class="mrow">
              <span class="mo">∑</span>
             </div>
             <span class="mi">i</span>
            </div>
            <div class="msub">
             <div class="mrow">
              <span class="mi">P</span>
             </div>
             <span class="mi">i</span>
            </div>
            <div class="msub">
             <div class="mrow">
              <span class="mi">u</span>
             </div>
             <span class="mi">A</span>
            </div>
            <span class="mo">=</span>
            <span class="mi">μ</span>
            <div class="mrow">
             <span width=".5em" class="mspace"/>
             <span width=".5em" class="mspace"/>
            </div>
           </div>
          </div>
          <div class="mtr">
           <div class="mtd">
            <div class="mrow"/>
            <span stretchy="false" class="mo">⇒</span>
            <div class="msub">
             <div class="mrow">
              <span class="mo">∑</span>
             </div>
             <span class="mi">i</span>
            </div>
            <div class="msub">
             <div class="mrow">
              <span class="mi">P</span>
             </div>
             <span class="mi">i</span>
            </div>
            <div class="msub">
             <div class="mrow">
              <span class="mi">u</span>
             </div>
             <span class="mi">A</span>
            </div>
            <span class="mo">=</span>
            <span class="mi">λ</span>
            <div class="msub">
             <div class="mrow">
              <span class="mi">C</span>
             </div>
