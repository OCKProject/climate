     </msub>
     <mtext class="mtext"> </mtext>
     <mrow class="mrow">
      <mrow class="mrow">
       <mo class="mo">(</mo>
       <mrow class="mrow">
        <msub class="msub">
         <mi mathvariant="normal" class="mi">μ</mi>
         <mi class="mi">t</mi>
        </msub>
       </mrow>
       <mo class="mo">)</mo>
      </mrow>
     </mrow>
     <mo class="mo">=</mo>
     <mi mathvariant="normal" class="mi">ρ</mi>
     <msub class="msub">
