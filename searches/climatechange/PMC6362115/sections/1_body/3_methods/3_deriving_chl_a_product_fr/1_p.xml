       </mrow>
       <mrow class="mrow">
        <mn class="mn">1</mn>
       </mrow>
      </msub>
      <mi class="mi">X</mi>
      <mo class="mo">+</mo>
      <msub class="msub">
       <mrow class="mrow">
        <mi mathvariant="normal" class="mi">a</mi>
       </mrow>
       <mrow class="mrow">
        <mn class="mn">2</mn>
       </mrow>
      </msub>
      <msup class="msup">
       <mrow class="mrow">
        <mi class="mi">X</mi>
       </mrow>
       <mrow class="mrow">
        <mn class="mn">2</mn>
       </mrow>
      </msup>
      <mo class="mo">+</mo>
      <msub class="msub">
       <mrow class="mrow">
        <mi mathvariant="normal" class="mi">a</mi>
       </mrow>
       <mrow class="mrow">
        <mn class="mn">3</mn>
       </mrow>
      </msub>
      <msup class="msup">
       <mrow class="mrow">
        <mi class="mi">X</mi>
       </mrow>
       <mrow class="mrow">
        <mn class="mn">3</mn>
       </mrow>
      </msup>
      <mo class="mo">+</mo>
      <msub class="msub">
       <mrow class="mrow">
        <mi mathvariant="normal" class="mi">a</mi>
       </mrow>
       <mrow class="mrow">
        <mn class="mn">4</mn>
