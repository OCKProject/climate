      <mi mathvariant="normal" class="mi">d</mi>
     </mrow>
    </msub>
    <mo class="mo">=</mo>
    <mn class="mn">1</mn>
    <msup class="msup">
     <mrow class="mrow">
      <mn class="mn">0</mn>
     </mrow>
     <mrow class="mrow">
      <msub class="msub">
       <mrow class="mrow">
        <mi mathvariant="normal" class="mi">a</mi>
       </mrow>
       <mrow class="mrow">
        <mn class="mn">0</mn>
       </mrow>
      </msub>
      <mo class="mo">+</mo>
      <msub class="msub">
       <mrow class="mrow">
