 <inline-formula id="IEq7" class="inline-formula">
  <alternatives class="alternatives">
   <tex-math id="M33" class="tex-math">\documentclass[12pt]{minimal} \usepackage{amsmath} \usepackage{wasysym} \usepackage{amsfonts} \usepackage{amssymb} \usepackage{amsbsy} \usepackage{mathrsfs} \usepackage{upgreek} \setlength{\oddsidemargin}{-69pt} \begin{document}$${X}_{iobs}$$\end{document}</tex-math>
