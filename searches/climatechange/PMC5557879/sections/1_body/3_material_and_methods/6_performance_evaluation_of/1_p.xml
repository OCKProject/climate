            <mi class="mi">b</mi>
            <mi class="mi">s</mi>
           </mrow>
          </msub>
          <mo class="mo">−</mo>
          <msub class="msub">
           <mrow class="mrow">
            <mi class="mi">X</mi>
           </mrow>
           <mrow class="mrow">
            <mi class="mi">i</mi>
            <mspace width=".25em" class="mspace"/>
            <mi class="mi">m</mi>
            <mi class="mi">o</mi>
            <mi class="mi">d</mi>
           </mrow>
          </msub>
          <mo stretchy="false" class="mo">)</mo>
         </mrow>
         <mrow class="mrow">
          <mn class="mn">2</mn>
         </mrow>
        </msup>
       </mrow>
       <mi class="mi">n</mi>
      </mfrac>
     </mrow>
    </msqrt>
   </math>
