      </mrow>
      <mrow class="mrow">
       <mi class="mi">T</mi>
      </mrow>
     </msubsup>
     <mo class="mo">·</mo>
     <mi class="mi">I</mi>
     <mo stretchy="true" class="mo">(</mo>
     <msubsup class="msubsup">
      <mrow class="mrow">
       <mi class="mi">R</mi>
      </mrow>
      <mrow class="mrow">
       <mi class="mi">i</mi>
      </mrow>
      <mrow class="mrow">
       <mi class="mi">l</mi>
      </mrow>
     </msubsup>
     <mo class="mo">≤</mo>
     <msubsup class="msubsup">
      <mrow class="mrow">
       <mi class="mi">r</mi>
      </mrow>
      <mrow class="mrow">
       <mi class="mi">k</mi>
