    </mrow>
   </mfenced>
   <mo class="mo">=</mo>
   <mfrac class="mfrac">
    <mrow class="mrow">
     <mn class="mn">1</mn>
    </mrow>
    <mrow class="mrow">
     <mo class="mo">Δ</mo>
     <mo class="mo"> </mo>
     <mtext class="mtext">ln</mtext>
     <mi class="mi">R</mi>
    </mrow>
   </mfrac>
   <mfrac class="mfrac">
    <mrow class="mrow">
     <mn class="mn">1</mn>
    </mrow>
    <mrow class="mrow">
     <msub class="msub">
      <mrow class="mrow">
       <mi class="mi">N</mi>
      </mrow>
      <mrow class="mrow">
       <mi class="mi">T</mi>
