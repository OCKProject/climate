     <mo class="mo">&lt;</mo>
     <msubsup class="msubsup">
      <mrow class="mrow">
       <mi class="mi">R</mi>
      </mrow>
      <mrow class="mrow">
       <mi class="mi">i</mi>
      </mrow>
      <mrow class="mrow">
       <mi class="mi">r</mi>
      </mrow>
     </msubsup>
     <mo stretchy="true" class="mo">)</mo>
    </mrow>
   </mrow>
   <mo class="mo">,</mo>
  </math>
