          <mo stretchy="false" class="mo">)</mo>
         </mrow>
         <mo class="mo">=</mo>
         <mo class="mo">exp</mo>
         <mfenced close=")" open="(" separators="" class="mfenced">
          <mrow class="mrow">
           <mi class="mi">β</mi>
           <mi class="mi">Z</mi>
           <mo stretchy="false" class="mo">(</mo>
           <mi class="mi">s</mi>
           <mo stretchy="false" class="mo">)</mo>
           <mo class="mo">+</mo>
           <mi class="mi">Y</mi>
           <mo stretchy="false" class="mo">(</mo>
           <mi class="mi">s</mi>
           <mo stretchy="false" class="mo">)</mo>
          </mrow>
         </mfenced>
        </mrow>
       </mtd>
      </mtr>
      <mtr class="mtr">
       <mtd class="mtd">
        <mrow class="mrow">
         <mrow class="mrow"/>
         <mrow class="mrow">
          <mi class="mi">R</mi>
          <mrow class="mrow">
           <mo stretchy="false" class="mo">(</mo>
           <mi class="mi">s</mi>
           <mo stretchy="false" class="mo">)</mo>
          </mrow>
          <mo class="mo">=</mo>
          <msub class="msub">
           <mi class="mi">C</mi>
           <mi class="mi">A</mi>
          </msub>
          <mi class="mi">λ</mi>
          <mrow class="mrow">
           <mo stretchy="false" class="mo">(</mo>
           <mi class="mi">s</mi>
           <mo stretchy="false" class="mo">)</mo>
          </mrow>
          <mi class="mi">μ</mi>
          <mrow class="mrow">
           <mo stretchy="false" class="mo">(</mo>
           <mi class="mi">s</mi>
           <mo stretchy="false" class="mo">)</mo>
          </mrow>
         </mrow>
        </mrow>
       </mtd>
      </mtr>
      <mtr class="mtr">
       <mtd class="mtd">
        <mrow class="mrow">
         <mrow class="mrow"/>
         <mrow class="mrow">
          <mi class="mi">X</mi>
          <mo stretchy="false" class="mo">(</mo>
          <mi class="mi">s</mi>
          <mo stretchy="false" class="mo">)</mo>
          <mo class="mo">∼</mo>
          <mtext class="mtext">poisson</mtext>
          <mo stretchy="false" class="mo">(</mo>
          <mi class="mi">R</mi>
          <mo stretchy="false" class="mo">(</mo>
          <mi class="mi">s</mi>
          <mo stretchy="false" class="mo">)</mo>
          <mo stretchy="false" class="mo">)</mo>
         </mrow>
        </mrow>
       </mtd>
      </mtr>
     </mtable>
    </mrow>
   </math>
