            <mn class="mn">10</mn>
            <mn class="mn">6</mn>
           </msup>
          </mrow>
         </mfenced>
        </mrow>
       </mtd>
      </mtr>
      <mtr class="mtr">
       <mtd class="mtd">
        <mrow class="mrow">
         <mrow class="mrow"/>
         <mrow class="mrow">
          <mo class="mo">log</mo>
          <mfenced close=")" open="(" class="mfenced">
           <mi class="mi">φ</mi>
          </mfenced>
          <mo class="mo">∼</mo>
          <mtext class="mtext">normal</mtext>
          <mfenced close=")" open="(" separators="" class="mfenced">
           <mrow class="mrow">
            <mo class="mo">log</mo>
            <mo stretchy="false" class="mo">(</mo>
            <mn class="mn">500</mn>
            <mo stretchy="false" class="mo">)</mo>
