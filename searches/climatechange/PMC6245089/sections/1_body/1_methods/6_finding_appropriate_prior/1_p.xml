            <mn class="mn">2</mn>
           </mrow>
          </mfenced>
         </mrow>
        </mrow>
       </mtd>
      </mtr>
      <mtr class="mtr">
       <mtd class="mtd">
        <mrow class="mrow">
         <mrow class="mrow"/>
         <mrow class="mrow">
          <mo class="mo">log</mo>
          <mfenced close=")" open="(" class="mfenced">
           <mi class="mi">σ</mi>
          </mfenced>
          <mo class="mo">∼</mo>
          <mtext class="mtext">normal</mtext>
          <mfenced close=")" open="(" separators="" class="mfenced">
           <mrow class="mrow">
            <mo class="mo">log</mo>
